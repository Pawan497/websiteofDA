    nav#navbar.top.firstClass.secondClass
        ul
            div#logo
                img(src="/static/img/images.png", alt="Dance Academy")
                | DA
            li
                a(href="/")  Home
            li
                a(href="/about")  About
            li
                a(href="/services")  Services
            li
                a(href="/information") Information
            li
